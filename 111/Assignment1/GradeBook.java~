public class GradeBook
{
	static Scanner console = new Scanner(System.in);
			
	public static void main(String[] args)
	{
		int num, i;
		Student[] stdnt = new Student[num];
		
		System.out.print("Class Size: ");
		num = console.nextInt();
		
		//inputs each stdnt instance
		//into the array
		for(i = num; i > 0; i--)
		{
			stdnt[num] = console.nextInt();
		}